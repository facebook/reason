 (copy#
  compiler-functions/%{read:compiler-functions-file}
  migrate_parsetree_compiler_functions.ml))

(rule
 (targets ast-version compiler-functions-file)
 (action  (run %{ocaml} %{dep:config/gen.ml} %{ocaml_version})))
