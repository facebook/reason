(jbuild_version 1)

(rule
 ((targets (myocamlbuild))
  (deps (myocamlbuild.ml))
  (action (run ocamlbuild -build-dir . -just-plugin ${<}))))

(install
 ((section bin)
  (package rebuild)
  ; This is a nested _build directory that running
  ; ocamlbuild -just-plugin generates.
  (files ((myocamlbuild as rebuild)))))
