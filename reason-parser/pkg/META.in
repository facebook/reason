version = "%{version}%"
description = "Reason Parser: Meta Language Abstraction"
error(pkg_camlp4) = "reason-parser is incompatible with camlp4"

# Batch compilation
archive(syntax, preprocessor, utf8) = "-ignore"
# This preprocessor doesn't seem to be installed
preprocessor = "ocamlreason_preprocessor_where_does_this_end_up"

archive(byte) = "@result/result.cmo"
archive(byte) += "@ppx_tools_versioned/ppx_tools_versioned.cma"
archive(byte) += "ppx_deriving.cmo ppx_deriving_show.cmo reason.cma"

archive(native) = "reason.cmxa"

package "lib" (
  version = "%{version}%"
  description = "Library version of reason"
  requires = "compiler-libs.common menhirLib"

  archive(byte) = "reason.cma"
  archive(native) = "reason.cmxa"
  archive(native, plugin) = "reason.cmxs"
)
